<h4>LIST OF EVENTS</h4>

<div class="row">
  <%
  if(userData.length!=0){
  var i=1;
  userData.forEach(function(data){
    var event=data.date;
  var event_date= event.toLocaleString('en-US', {

    day: 'numeric', // numeric, 2-digit
    month: 'long', // numeric, 2-digit, long, short, narrow

    year: 'numeric', // numeric, 2-digit

});

  %>
  <div class="column">
    <div class="card" id="myImg" mytitle="Event <%=i %>" style="background-image:url('public/uploads/<%=data.img%>')"   >
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>

      <h3><%=data.title %></h3>



      <div id="content" class="mytext">
        <p>Name : <%=data.name %></p>
        <p>Emai : <%=data.email %></p>
        <p>Number : <%=data.phone %></p>
        <p>Title : <%=data.title %></p>
        <p>Date : <%=event_date%>;</p>
        <p>Time : <%=data.time %></p>
        <p>Venue : <%=data.venue %></p>
        <p>City : <%=data.city %></p>
        <p>State : <%=data.state %></p>
        <p>Postal Code : <%=data.code %></p>
        <p>Description : <%=data.description %></p>
        <% if(data.img!='undefined'){%>
           <img src="public/uploads/<%=data.img%>" alt="">
         <%}%>
         <% if(data.img2!='undefined'){%>
            <img src="public/uploads/<%=data.img2%>" alt="">
          <%}%>
          <% if(data.img3!='undefined'){%>
               <img src="public/uploads/<%=data.img3%>" alt="">
           <%}%>
           <% if(data.img4!='undefined'){%>
              <img src="public/uploads/<%=data.img4%>" alt="">
            <%}%>
            <% if(data.img5!='undefined'){%>
                 <img src="public/uploads/<%=data.img5%>" alt="">
             <%}%>
        <!-- <p>image : <%=data.img%></p> -->



      </div>
    </div>
  </div>

<%  i++; });  %>
</div>
<% } else{ %>
  <div class="row">
  <div class="column">
    <div class="card" id="myImg" mytitle="card <%=i %>">
      <br>
      <br>
      <p>No records found here!</p>
      <br>
      <br>
      </div>
      </div>
    </div>
  </div>
<% };%>


  <div id="myModal" class="modal">
